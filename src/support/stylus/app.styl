@require '../../node_modules/vuetify/src/stylus/settings/_colors'
@import '../../node_modules/vuetify/src/stylus/main'

.login
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  .login__background
    position absolute
    top 0
    right 0
    bottom 50%
    left 0

  .login__card
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 400px
    margin-top -45px

    @media (max-width: 599px)
      padding 8px
      width 100%

  .login__logo
    padding 20px 0
    text-align center

    img
      display inline-block
      height 120px
